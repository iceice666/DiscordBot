{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "viztracer",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/activate.ps1;viztracer --tracer_entries 9999999 --log_async --open -o 'viztracer_result.json' ${relativeFile} ",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        },
        
    ]
}